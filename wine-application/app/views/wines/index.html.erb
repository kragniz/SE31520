<div class="container">
    <h1>Wines</h1>
    <div id="products" class="row list-group">
        <% @wines.each do |wine| %>
        <div class="item  col-xs-4 col-lg-4">
            <div class="thumbnail">
                <%= link_to image_tag("wine.jpg"),
                    wine, class: "group list-group-image" %>
                <div class="caption">
                    <h4 class="group inner list-group-item-heading">
                        <%= wine.name %></h4>
                    <p class="group inner list-group-item-text">
                        <%= wine.short_description %></p>

                    <div class="row">
                        <div class="col-xs-12 col-md-6">
                            <p class="lead">
                                Â£<%= wine.price %> - <%= wine.size %>cl</p>
                        </div>
                        <div class="col-xs-12 col-md-6">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% end %>
    </div>
    <div class="text-center">
        <%= paginate @wines %>
    </div>
</div>

<br>
