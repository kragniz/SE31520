<p id="notice"><%= notice %></p>

<h1>Wines</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th>Long description</th>
      <th>Country</th>
      <th>Grape</th>
      <th>Vegetarian</th>
      <th>Size</th>
      <th>Price</th>
      <th>Short description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wines.each do |wine| %>
      <tr>
        <td><%= wine.name %></td>
        <td><%= wine.image %></td>
        <td><%= wine.long_description %></td>
        <td><%= wine.country %></td>
        <td><%= wine.grape %></td>
        <td><%= wine.vegetarian %></td>
        <td><%= wine.size %></td>
        <td><%= wine.price %></td>
        <td><%= wine.short_description %></td>
        <td><%= link_to 'Show', wine %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @wines %>

<br>
